<h1>Listing countries</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= link_to country.name, country %></td>

        <% if check_if_allowed_to_see_link %>

            <td><%= link_to 'Edit', edit_country_path(country) , class: "btn btn-info" %></td>
            <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

   <p>Number of countries: <%= @countries.count %></p>

<br>

<%= link_to 'New Country', new_country_path , class: "btn btn-success" if check_if_allowed_to_see_link %>
