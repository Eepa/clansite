<p id="notice"><%= notice %></p>

<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Clan</th>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>

        <% if user.clan_id.nil? %>

            <td>Not a member of any clan!</td>

        <% else %>
            <td><%= link_to user.clan.name, clan_path(user.clan) %></td>
        <% end %>

        <% unless current_user.nil?  %>

            <% if current_user == user  %>
                <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-info"  %></td>
                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>

             <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p>Number of users: <%= @users.count %></p>

<br>

<%= link_to 'Create an account', new_user_path, class: "btn btn-success"  %>
