<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Clan</th>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>

        <% if user.clan_id.nil? %>

            <td>Not a member of any clan!</td>

        <% else %>
            <td><%= link_to user.clan.name, clan_path(user.clan) %></td>
        <% end %>

        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p>Number of users: <%= @users.count %></p>

<br>

<%= link_to 'New User', new_user_path %>
