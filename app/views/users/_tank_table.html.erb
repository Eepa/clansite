<% if @user.tanks.empty? %>

    <p>User does not have any tanks!</p>



<% else %>

    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Country</th>
        <th>Tier</th>
        <th>Style</th>

      </tr>
      </thead>

      <tbody>
      <% @user.tanks.each do |tank| %>
          <tr>
            <td><%= link_to tank.name, tank %></td>
            <td><%= tank.description %></td>
            <td><%= link_to tank.country.name, country_path(tank.country) %></td>
            <td><%= tank.tier_number %></td>
            <td><%= link_to tank.style.name, style_path(tank.style) %></td>


          </tr>
      <% end %>
      </tbody>
    </table>

<% end %>

<br>

<p><%= link_to 'Add a tank', new_user_tank_path if current_user %></p>

