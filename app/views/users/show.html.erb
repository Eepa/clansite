<p id="notice"><%= notice %></p>

<h1><%= @user.name %></h1>

<p>
  <h2><strong>Clan:</strong></h2>


  <% if @user.clan_id.nil? %>

    <p>Not a member of any clan!</p>

    <%= link_to 'Join clan', join_clan_user_path unless current_user.nil? or !current_user.admin %>

<% else %>
   <p> <%= link_to @user.clan.name, clan_path(@user.clan) %> </p>

    <%= link_to 'Leave clan', leave_clan_user_path, method: :put, data: {confirm: "Are you sure?"} unless current_user.nil? or !current_user.admin %>

<% end %>
</p>

<br>

<p>
<h2><strong>Status:</strong></h2>


<% if @user.admin %>

    <p>Admin user</p>

<% else %>
    <p>Normal user</p>

<% end %>

<%= link_to 'Change status', change_admin_status_user_path, method: :put, data: {confirm: "Are you sure?"} unless current_user.nil? or !current_user.admin or current_user==@user %>
</p>

<br>

<h2><strong>Tanks:</strong></h2>

<%= render 'tank_table' %>


<br>

<%= link_to 'Edit', edit_user_path(@user) unless current_user.nil? or !current_user.admin %>
