<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @user.new_record? %>

    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>

  <% end %>

    <% if @clans.nil? %>
    <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>

    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>

    </div>

     <% else %>

        <div class="field">
          <%= f.label :clan_id %><br>
          <%= f.select :clan_id, options_from_collection_for_select(@clans, :id, :name, selected: @user.clan_id) %>
        </div>

     <% end %>




  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
