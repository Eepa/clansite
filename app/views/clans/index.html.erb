<h1>Listing clans</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clans.each do |clan| %>
      <tr>
        <td><%= link_to clan.name, clan %></td>
        <td><%= clan.description %></td>

        <% if check_if_allowed_to_see_link %>

            <td><%= link_to 'Edit', edit_clan_path(clan), class: "btn btn-info"  %></td>
            <td><%= link_to 'Destroy', clan, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>

        <% end %>

        </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>Number of clans: <%= @clans.count %></p>

<br>



<%= link_to 'New Clan', new_clan_path , class: "btn btn-success" if check_if_allowed_to_see_link %>
