<h1>Listing tanks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Country</th>
      <th>Tier</th>
      <th>Style</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tanks.each do |tank| %>
      <tr>
        <td><%= link_to tank.name, tank %></td>
        <td><%= tank.description %></td>
        <td><%= link_to tank.country.name, country_path(tank.country) %></td>
        <td><%= tank.tier_number %></td>
        <td><%= link_to tank.style.name, style_path(tank.style) %></td>

        <% if current_user %>
            <td><%= link_to 'Edit', edit_tank_path(tank) %></td>
            <td><%= link_to 'Destroy', tank, method: :delete, data: { confirm: 'Are you sure?' } %></td>


        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>Number of tanks: <%= @tanks.count %></p>

<br>

<%= link_to 'New Tank', new_tank_path if current_user %>
